.head {
  width: 750rpx;
  height: 120rpx;
  background-color: #ededed;
  position: relative;
}
.search {
   display: flex;
   flex-direction: row;
   /* width的宽度为85% */
   width: 637.5rpx;
   height: 80rpx;
   margin: 0 auto;
   top: 50%;
   left: 50%;
   margin-top: -40rpx;
   margin-left: -318.75rpx;
   position: absolute;
 }
.input {
  width: 70%;
  height: 100%;
  background: white;
  padding-left: 40rpx;
  padding-right: 40rpx;
  line-height: 80rpx;
  font-size: 36rpx;
}
.button {
  display: block;
  text-align: center;
  width: 30%;
  height: 100%;
  line-height: 80rpx;
  letter-spacing: 5rpx;
  font-size: 36rpx;
} 
.news-container {
  display: flex;
  flex-direction: column;
  margin: 10rpx 0 10rpx 0;
  border-bottom: 3px solid #ededed;
	width: 100%;
}
.news-date {
  font-size: 24rpx;
  text-align: right;
  margin-right: 30rpx;
}
.news-title {
  font-size: 38rpx;
  font-weight: 800;
  margin: 0 30rpx 10rpx 30rpx;
  color: #333;
}
.news-img {
  width:65%;
  height:260rpx;
  margin:0 auto 10rpx;
}
.news-desc {
  margin: 0 30rpx 0 30rpx;
  font-size: 26rpx;
  display: -webkit-box;
           -webkit-line-clamp: 3;
           -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.news-style {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 50rpx;
}
.news-style-source {
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #999;
  width: 70%;
  line-height: 52rpx;
}
.news-style-like {
  font-size: 13px;
  vertical-align: middle;
  line-height: 46rpx;
  margin-right: 20rpx;
}
.news-style-like-image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.news-style-like-font {
  vertical-align: middle;
  margin-right: 30rpx;
  font-size: 22rpx;
  color: #666;
}